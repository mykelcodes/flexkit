{
    "name": "@mykelcodes/flexkit",
    "version": "0.1.0",
    "description": "A layout UI component library for react native",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.mjs",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./*": {
            "types": "./dist/*.d.ts",
            "import": "./dist/*.mjs",
            "require": "./dist/*.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "src"
    ],
    "repository": "https://github.com/mykelcodes/flexkit",
    "keywords": [
        "react-native",
        "ui",
        "components",
        "layout",
        "flexbox",
        "android",
        "ios",
        "web",
        "expo"
    ],
    "author": "Michael Olawale <tech@mykelcodes.com> (https://github.com/mykelcodes)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mykelcodes/flexkit/issues"
    },
    "homepage": "https://github.com/mykelcodes/flexkit#readme",
    "workspaces": [
        "example"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint . --ext .ts,.tsx",
        "example": "concurrently \"bun run dev\" \"bun install --filter example && cd example && bun run start\"",
        "postinstall": "bun run build",
        "prepublishOnly": "bun run build"
    },
    "devDependencies": {
        "@types/react": "^19.1.10",
        "concurrently": "^9.2.0",
        "prettier": "^3.6.2",
        "react": "^19.1.1",
        "react-native": "^0.81.0",
        "react-native-unistyles": "^3.0.10",
        "tsup": "^8.5.0",
        "typescript": "^5.9.2"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": ">=0.76.0",
        "react-native-unistyles": ">=3.0.1"
    }
}
