{
    "name": "@mykelcodes/flexkit",
    "version": "0.1.0",
    "description": "A layout UI component library for react native",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "module": "dist/index.mjs",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./*": {
            "types": "./dist/*.d.ts",
            "import": "./dist/*.mjs",
            "require": "./dist/*.js"
        },
        "./package.json": "./package.json"
    },
    "files": [
        "dist",
        "src"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mykelcodes/flexkit.git"
    },
    "keywords": [
        "react-native",
        "ui",
        "components",
        "layout",
        "flexbox",
        "android",
        "ios",
        "web",
        "expo"
    ],
    "author": "Michael Olawale <tech@mykelcodes.com> (https://github.com/mykelcodes)",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "bugs": {
        "url": "https://github.com/mykelcodes/flexkit/issues"
    },
    "homepage": "https://github.com/mykelcodes/flexkit#readme",
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "tsc": "node_modules/typescript/bin/tsc --noEmit",
        "lint": "prettier . --write",
        "lint:ci": "prettier . --check",
        "example": "concurrently 'pnpm dev' 'cd example && pnpm start'",
        "prepublishOnly": "pnpm build",
        "prepare": "concurrently 'husky' 'pnpm build'",
        "precommit": "concurrently 'pnpm lint' 'pnpm tsc'",
        "circular:check": "dpdm --no-warning --no-tree -T --exit-code circular:1 src/**/*.ts",
        "release": "release-it",
        "release:alpha": "release-it --preRelease=alpha",
        "release:beta": "release-it --preRelease=beta",
        "release:rc": "release-it --preRelease=rc"
    },
    "devDependencies": {
        "@release-it/conventional-changelog": "^10.0.1",
        "@types/react": "^19.1.10",
        "concurrently": "^9.2.0",
        "dpdm": "^3.14.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.5",
        "prettier": "^3.6.2",
        "react": "19.0.0",
        "react-native": "0.79.5",
        "react-native-unistyles": "3.0.10",
        "release-it": "^19.0.4",
        "tsup": "^8.5.0",
        "typescript": "^5.9.2"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": ">=0.76.0",
        "react-native-unistyles": ">=3.0.1"
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "prettier --write"
        ]
    },
    "packageManager": "pnpm@10.8.1+sha512.c50088ba998c67b8ca8c99df8a5e02fd2ae2e2b29aaf238feaa9e124248d3f48f9fb6db2424949ff901cffbb5e0f0cc1ad6aedb602cd29450751d11c35023677"
}
